<h1>Books</h1>

<table>
  <thead>
  	<tr>
  	  <th>Title</th>
  	  <th>Body</th>
  	</tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
    <tr>
  	  <td><%= book.title %></td>
  	  <td><%= book.body %></td>
  	  <td><%= link_to "Show", book_path(book) %></td>
  	  <td><%= link_to "Edit", edit_book_path(book) %></td>
  	  <td><%= link_to "Destroy", book_path(book), method: :delete,data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
     <div class="alert">
        <h2><%= pluralize(@book.errors.count, "error")%> prohibited this obj from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>

<% end %>

